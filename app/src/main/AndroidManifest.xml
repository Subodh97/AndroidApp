<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.capgemini.androidapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <permission android:name="com.capgemini.androidapp.permission.LOGIN"
        android:label="My permission"
        android:protectionLevel="normal"></permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidApp">
        <activity android:name=".CustomActivity"></activity>

        <activity android:name=".WebviewActivity" />
        <activity android:name=".SpinnerActivity" />
        <activity android:name=".ListviewActivity" />
        <activity android:name=".CheckBoxActivity" />
        <activity
            android:name=".RadioActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".DemoActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".AuthActivity"
            android:permission="com.capgemini.androidapp.permission.LOGIN">
            <intent-filter>
                <action android:name="com.capgemini.androidapp.action.login" />

            </intent-filter>

        </activity>
        <activity
            android:name=".MainActivity"
            android:label="MyLabel">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>